@import 'movie-list-template/movie-list-template';

.container {
  background-color: #f2f2f2;
}
.movies-template {
  margin-bottom: 30rpx;
}
.search-container {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 100%;
  background-color: #f2f2f2;
}
.search-container .search-img {
  margin: auto 0 auto 20rpx;
}
.search-container input {
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.search-container .placeholder {
  margin-left: 20rpx;  
  font-size: 28rpx;
  color: #d1d1d1;
}
.search-container .xx-img {
  width: 40rpx;
  height: 40rpx;
  margin: auto 0 auto 10rpx;
}