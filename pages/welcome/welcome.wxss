.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b3d4db;
}
.user-avatar {
  width: 700rpx;
  height: 700rpx;
  margin-top: 160rpx;
}
.user-name {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}
.moto {
  line-height: 80rpx;
  font-size: 22rpx;
  color: #405f80;
}